<!DOCTYPE html>
<html>
<head>
  <title>Odot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "vendor/modernizer" %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/navigation' %>
	<% flash.each do |type, message| %>
		<aside class="flash alert-box text-center <%= type %>">
			<%= message %>
			<a href="#" class="close">&times;</a>
		</aside>
	<% end %>

	<section class="row collapse">
		<main class="small-12 small-centered medium-8 medium-centred large-5 large-centered columns">
			<%= yield %>
		</main>
	</section>

	<footer class="row">
		<nav class="small-12 small-centered medium-8 medium-centred large-5 large-centered columns">
			<% if logged_in? %>
				<%= link_to "Settings", edit_user_path(current_user)  %>
			<% end %>
		</nav>
	</footer>
</body>
</html>
